#####
# Configuration file for the Gateway Device App (GDA)
#
# This provides a section-based configuration format for use by
# ConfigUtil with keys defined in ConfigConst.
#
# IMPORTANT: Edit this file to meet your local system requirements.
#
# @author: Emma
#####

#####
# Gateway Device Section
#####
[GatewayDevice]

# Device identification
deviceLocationID = gatewaydevice001

# Enable/disable connectivity clients
enableMqttClient = True
enableCoapServer = True
enableCoapClient = False
enableCloudClient = False
enableSmtpClient = False
enablePersistenceClient = False

# Enable/disable system managers
enableSystemPerformance = True
enableLogging = True

# Polling cycles (in seconds)
pollCycleSecs = 60
keepAlive = 60

# Data paths for testing
testGdaDataPath = /tmp/gda-data
testCdaDataPath = /tmp/cda-data
gatewayDataPath = /tmp/gda-data
cdaDataPath = /tmp/cda-data
gdaDataPath = /tmp/gda-data

# Test configuration
testEmptyApp = False

# Default values (for tests)
defaultLocationID = Not Set
sensorDefaultName = DefaultSensor

# Lab Module 10: Humidity change handling on GDA
handleHumidityChangeOnDevice = True

# Min seconds between readings before triggering actuation event
humidityMaxTimePastThreshold = 10

# Ideal average humidity level (% relative)
nominalHumiditySetting = 40.0

# Min value before turning on humidifier (% relative)
triggerHumidifierFloor = 30.0

# Max value before turning off humidifier (% relative)
triggerHumidifierCeiling = 50.0


#####
# MQTT Gateway Service Section
#####
[Mqtt.GatewayService]

# MQTT broker connection settings
host = localhost
port = 1883
securePort = 8883

# MQTT client settings
keepAlive = 60
defaultQos = 1

# MQTT authentication
enableAuth = False
userName = 
userPassword = 

# MQTT TLS/SSL settings
enableCrypt = False
enableEncryption = False
certFile = ./cert/PiotMqttLocalCertFile.pem
pemFileName = ./cert/PiotMqttLocalCertFile.pem

# MQTT credentials file
credFile = ./cred/PiotMqttCred.props

# Async client configuration
useAsyncClient = True
useCleanSession = True


#####
# CoAP Gateway Service Section
#####
[Coap.GatewayService]

# CoAP server connection settings
host = localhost
port = 5683
securePort = 5684

# CoAP security settings
enableAuth = False
enableCrypt = False
enableConfirmedMsgs = True

# CoAP credentials and certificates
credFile = ./cred/PiotCoapCred.props
certFile = ./cert/PiotCoapLocalCertFile.pem


#####
# Cloud Gateway Service Section
#####
[Cloud.GatewayService]

# Cloud provider settings
host = localhost
port = 1883
securePort = 8883

# Cloud authentication
enableAuth = True
userName = 
userPassword = 

# Cloud TLS/SSL
enableCrypt = True
certFile = ./cert/PiotCloudCert.pem

# Cloud credentials
credFile = ./cred/PiotCloudCred.props

# Cloud MQTT settings
defaultQoS = 0
keepAlive = 60
useAsyncClient = True

# Cloud URLs and topics
baseUrl = 
baseTopic = 


#####
# SMTP Gateway Service Section
#####
[Smtp.GatewayService]

# SMTP server settings
host = localhost
port = 25
securePort = 587

# SMTP authentication
enableAuth = True
enableCrypt = True

# SMTP credentials
credFile = ./cred/PiotSmtpCred.props


#####
# Gateway Device Data Manager Section
#####
[Gateway.DeviceDataManager]

# Enable/disable data persistence
enablePersistence = True


#####
# End of Configuration File
#####